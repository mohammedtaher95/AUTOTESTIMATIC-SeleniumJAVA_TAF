<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite thread-count="10" parallel="tests" data-provider-thread-count="1" name="WebDriver Suite" group-by-instances="true">
  <test thread-count="10" name="Chrome Test" group-by-instances="true">
    <parameter name="browserName" value="chrome"/>
    <classes>
      <class name="tests.TestClass">
        <methods>
          <include name="testMethod"/>
        </methods>
      </class> <!-- tests.TestClass -->
    </classes>
  </test> <!-- Chrome Test -->
  <test thread-count="10" name="Firefox Test" group-by-instances="true">
    <parameter name="browserName" value="firefox"/>
    <classes>
      <class name="tests.TestClass">
        <methods>
          <include name="testMethod"/>
        </methods>
      </class> <!-- tests.TestClass -->
    </classes>
  </test> <!-- Firefox Test -->
</suite> <!-- WebDriver Suite -->
